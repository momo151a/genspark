rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Anyone can read
    match /{allPaths=**} {
      allow read: if true;
    }

    // Only authenticated users can upload avatars
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Only authenticated users can upload review images
    match /reviews/{reviewId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Only admins can manage product images
    match /products/{productId}/{allPaths=**} {
      allow write: if false; // Manage via Firebase Console
    }
  }
}
